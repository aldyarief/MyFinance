<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#1A1A37"
    tools:context=".activity.Kategori">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/judul1"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:text="Master Kategori"
            android:textSize="20sp"
            android:textColor="#0347F4"
            android:layout_marginRight="5dp"/>
        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:background="#0347F4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/judul1"
        android:orientation="vertical"
        android:id="@+id/menu1"
        android:padding="10dp">

        <EditText
            android:id="@+id/namkat"
            android:background="@drawable/backgroud"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Kategori"
            android:textColorHint="@color/white"
            android:inputType="textCapWords"
            android:textColor="#807f7f" />

        <TextView
            android:id="@+id/judulakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namkat"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:textColor="@color/white"
            android:text="Pilih Akun:"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:id="@+id/layspin"
            android:layout_below="@id/judulakun">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|start"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_spinner"
                    android:id="@+id/SpinKat"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/backgroud2"
                    android:src="@drawable/ic_drop" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layspin"
            android:id="@+id/idkat"
            android:visibility="invisible">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_below="@+id/menu1">

        <Button
            android:id="@+id/SimpanBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/backgroud"
            android:padding="15dp"
            android:text="Simpan"
            android:textSize="20dp"
            app:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/CloseBtn"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgroud"
            android:padding="15dp"
            android:text="Keluar"
            android:textSize="20dp"
            app:backgroundTint="#DA1111" />
    </LinearLayout>
</RelativeLayout>